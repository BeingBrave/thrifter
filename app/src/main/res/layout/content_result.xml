<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.beingbrave.thrifter.thrifter.ResultActivity"
    tools:showIn="@layout/activity_result">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_clear_black_24dp"
        android:adjustViewBounds="false"
        android:visibility="visible"
        app:backgroundTint="@color/ui_appBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="74dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_black_24dp"
        android:adjustViewBounds="false"
        android:visibility="visible"
        app:backgroundTint="@color/ui_appBar"
        android:layout_marginRight="74dp"
        android:layout_alignTop="@+id/fab_clear"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="74dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/imageView2"
        android:background="#dddddd"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_above="@+id/fab_clear"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Within 500m "
        android:id="@+id/textView2"
        android:textColor="@color/accent_colour"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/imageView3"
        android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/fab_clear" />

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_frame"
        app:rotation_degrees="16"
        app:max_visible="4"
        app:min_adapter_stack="6"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
