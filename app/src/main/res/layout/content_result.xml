<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="com.beingbrave.thrifter.thrifter.ResultActivity"
              tools:showIn="@layout/activity_result"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Within 500m "
            android:id="@+id/textView2"
            android:textColor="@color/accent_colour"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignEnd="@+id/fab_clear" />

    </LinearLayout>

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="360sp"
        android:layout_height="360sp"
        android:layout_gravity="center"
        android:id="@+id/card_frame"
        app:rotation_degrees="16"
        app:max_visible="4"
        app:min_adapter_stack="6"
        android:background="#dddddd"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/result_button_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"
            android:onClick="onDislikeClick"
            app:backgroundTint="@color/ui_appBar"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/result_button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            android:onClick="onLikeClick"
            app:backgroundTint="@color/ui_appBar"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            />
    </RelativeLayout>

</LinearLayout>
